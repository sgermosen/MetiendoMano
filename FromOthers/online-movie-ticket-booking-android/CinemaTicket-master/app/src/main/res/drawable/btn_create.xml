            <corners android:radius="10dp" />
            <solid android:color="@color/heavy_yellow" />

            <size
                android:width="252dp"
                android:height="35dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />
            <solid android:color="@color/heavy_yellow" />

            <size
                android:width="252dp"
                android:height="35dp" />
        </shape>
    </item>
</selector>