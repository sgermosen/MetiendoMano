@model CourseLandingPage

<div class="panel panel-default">
    <div class="panel-heading">
        <h1>@Model.Name</h1>
    </div>
    <div class="panel-body">
        <h4 class="remove-margin-top">
            <icon name="@Model.CategoryIcon"></icon> @Model.CategoryName
        </h4>
        <ul class="list-unstyled remove-margin-bottom">
            <li>
                <rating :value="@Model.Vote"></rating> (@Model.TotalComments valoraciones)
            </li>
            <li>
                <icon name="users"></icon> (@Model.Students estudiantes inscritos)
            </li>
            <li>
                <icon name="user"></icon> Por @Model.Instructor
            </li>
        </ul>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Descripción</h2>
    </div>
    <div class="panel-body">
        @Model.Description
    </div>
</div>
